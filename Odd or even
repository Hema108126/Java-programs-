import java.io.*;
class OddEvenCheck {
    public static void main(String[] args) {
        
        System.out.print("Enter a number: ");
        if (number % 2 == 0) {
            System.out.println(number + " is Even.");
        } else {
            System.out.println(number + " is Odd.");
        }

        scanner.close();
    }
}
